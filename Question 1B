#include <iostream>
#include <climits>
using namespace std;

int main() {
    int memory[100]; // array of 100 integers for a maximum of 100 instructions
    int temp;
    int count = 0; // to count the number of valid inputs

int total = 0;
    cout << "Enter seven numbers to compute their average.\n";
    for (int i = 0; i < 7; ++i) {
        cout << "?: ";
        cin >> temp;
        total += temp;
    }
    double average = static_cast<double>(total) / 7; // Compute the average
    cout << "Average of seven numbers: " << average << endl;

 system("pause");
    return 0;
}
